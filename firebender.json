{
  "backgroundAgent": {
    "install": "pnpm install",
    "start": "pnpm dev",
    "copyFiles": ["roadmap"]
  },
  "mcpServers": {
    "git-flow-mcp": {
      "url": "http://localhost:3002/mcp"
    }
  },
  "rules": [
    {
      "filePathMatches": "*",
      "rulesPaths": [
        "README.md",
        "docs/ai/validation.md",
        "roadmap/README.md",
        "roadmap/bugs/TEMPLATE.md",
        "roadmap/features/TEMPLATE.md",
        "roadmap/features/README.md"
      ]
    }
  ],
  "ignore": [
    "node_modules/",
    "dist/",
    ".view_hierarchy_cache/",
    "*.js"
  ]
}
